<h3>Clients</h3>
<h1 id="stylistname"><%= @stylist.name() %></h1>

<% if @stylist.clients().any?() %>
<h3>Here are all the clients assigned to this stylist:</h3>

<ul>
  <% @stylist.clients().each() do |client| %>
  <li><%= client.description() %>
  </li>
  <% end %>
</ul>

<% else %>
<p>There are no clients assigned to this stylist!</p>
<% end %>

<div class="container">
  <a href="/">
    <button class="btn">Home</a>
  </div>

  <h3>Add a client to
    <%= @stylist.name() %>
  </h3>

  <hr>

  <p>
    <a href="/stylists/<%= @stylist.id() %>/edit">Edit
      <%= @stylist.name() %>
      stylist</a>
  </p>
  <p>
    <a href="/">Return to Homepage</a>
  </p>

  <div class="container">
    <a href="/">Home</a>
    <a href="/stylists">View All Stylists</a>
    <a href="/stylists/new">Add New Stylist</a>
    <a href="/stylists/new">Add New Client</a>
  </div>